@* Views/Teacher/Classes.cshtml — All/Archived with left sidebar *@
@* WHAT IT DOES: Adds left sidebar; right side shows class cards and modals *@
@model Kinemathika.ViewModels.Teacher.TeacherClassesVm
@using Kinemathika.ViewModels.Teacher
@{
    ViewData["IsAuthPage"] = true;
    ViewData["Title"] = Model.Archived ? "Archived Classes" : "All Classes";
    var sidebar = ViewBag.Sidebar as SidebarVm ?? new SidebarVm();
}
<div class="container-xxl py-3">
    <!-- Top bar -->
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div class="fw-semibold">@ViewData["Title"]</div>
        <a class="btn btn-outline-danger" asp-controller="Account" asp-action="Logout">Logout</a>
    </div>

    <div class="row g-4">
        <!-- LEFT: Sidebar -->
        <div class="col-12 col-lg-3">
            <partial name="~/Views/Shared/_TeacherSidebar.cshtml" model="sidebar" />
        </div>

        <!-- RIGHT: Main content -->
        <div class="col-12 col-lg-9">
            <!-- Tabs -->
            <div class="mb-3 d-flex gap-2">
                <a class="btn btn-light @(Model.Archived ? "" : "active")" asp-action="Classes">All</a>
                <a class="btn btn-light @(Model.Archived ? "active" : "")" asp-action="Classes" asp-route-archived="true">Archived</a>
                <a class="btn btn-success ms-auto" asp-action="Create">New Class</a>
            </div>

            @if (!Model.Classes.Any())
            {
                <div class="alert alert-info mb-0">No classes to show.</div>
            }
            else
            {
                <div class="row g-4 class-grid">
                    @foreach (var c in Model.Classes)
                    {
                        <div class="col-12 col-sm-6 col-lg-4">
                            <div class="class-card-green">
                                <div class="class-card-title">@c.Name</div>
                                <div class="class-card-meta">@c.StudentCount student(s)</div>
                                <div class="class-card-actions">
                                    @if (!Model.Archived)
                                    {
                                        <a class="btn btn-light btn-sm" asp-action="Dashboard" asp-route-classId="@c.Id">Open</a>
                                        <button class="btn btn-outline-light btn-sm"
                                                data-bs-toggle="modal"
                                                data-bs-target="#confirmArchiveModal"
                                                data-class-id="@c.Id"
                                                data-class-name="@c.Name">
                                            Archive
                                        </button>
                                    }
                                    else
                                    {
                                        @* WHAT IT DOES: Opens the Restore modal for this archived class *@
                                        <button class="btn btn-light btn-sm"
                                                data-bs-toggle="modal"
                                                data-bs-target="#confirmRestoreModal"
                                                data-class-id="@c.Id"
                                                data-class-name="@c.Name">
                                            Restore
                                        </button>
                                    }

                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div> <!-- /RIGHT -->
    </div> <!-- /row -->
</div>

@* WHAT IT DOES: Archive + Restore confirmation modals with one script wiring both. *@

@* Archive confirm (kept) *@
<div class="modal fade" id="confirmArchiveModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4">
            <div class="modal-header">
                <h5 class="modal-title">Archive class</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="Archive" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <input type="hidden" name="id" id="archiveClassId" />
                    <p>Are you sure you want to archive <strong id="archiveClassName">this class</strong>?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-outline-danger">Archive</button>
                </div>
            </form>
        </div>
    </div>
</div>

@* Restore confirm (new) *@
<div class="modal fade" id="confirmRestoreModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4">
            <div class="modal-header">
                <h5 class="modal-title">Restore class</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="Unarchive" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <input type="hidden" name="id" id="restoreClassId" />
                    <p>Are you sure you want to restore <strong id="restoreClassName">this class</strong>?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-outline-success">Restore</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // WHAT IT DOES: Fills Archive & Restore modals with the clicked class info.
        (() => {
            const am = document.getElementById('confirmArchiveModal');
            am?.addEventListener('show.bs.modal', e => {
                const btn = e.relatedTarget;
                document.getElementById('archiveClassId').value = btn.getAttribute('data-class-id');
                document.getElementById('archiveClassName').textContent = btn.getAttribute('data-class-name');
            });

            const rm = document.getElementById('confirmRestoreModal');
            rm?.addEventListener('show.bs.modal', e => {
                const btn = e.relatedTarget;
                document.getElementById('restoreClassId').value = btn.getAttribute('data-class-id');
                document.getElementById('restoreClassName').textContent = btn.getAttribute('data-class-name');
            });
        })();
    </script>
}
