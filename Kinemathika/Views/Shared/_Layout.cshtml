@* Views/Shared/_Layout.cshtml — keeps your original layout, hides navbar/footer on auth pages, and adds Bootstrap Icons *@
@{
    var isAuth = (ViewData["IsAuthPage"] as bool?) == true; // set this in views like Login.cshtml
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kinemathika</title>

    <!-- Bootstrap (yours) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Site CSS (yours) -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Kinemathika.styles.css" asp-append-version="true" />

    <!-- Bootstrap Icons (CDN quick drop) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    @* If you installed via npm and copied to wwwroot, use this instead:
       <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" />
    *@
</head>
<body class="@(isAuth ? "bg-light" : "")">
    @* Header is hidden on auth pages like Login *@
    @if (!isAuth)
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Kinemathika</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }

    @* Use your container for normal pages; for auth pages we remove the container so the login card can sit right/aligned full-height *@
    @if (!isAuth)
    {
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    }
    else
    {
        <main role="main" class="p-0">
            @RenderBody()
        </main>
    }

    @* Footer is hidden on auth pages *@
    @if (!isAuth)
    {
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; @DateTime.Now.Year - Kinemathika - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
